{
  "name": "g16wpidml",
  "version": "0.2.0",
  "description": "Create your next Wordpress post from an existing IDML file",
  "private": true,
  "scripts": {
    "dev:prepdir": "mkdir wordpress phpmyadmin mysql",
    "dev:mysql": "docker run --rm --name=mysql -d -e MYSQL_ROOT_PASSWORD=root -e G16_MACOS=yes -v $(echo $PWD)/mysql:/var/lib/mysql ghifari160/mysql",
    "dev:phpmyadmin": "docker run --rm --name=phpmyadmin --link=mysql -d -v $(echo $PWD)/phpmyadmin:/var/www/html -p 8080:80 ghifari160/phpmyadmin",
    "dev:wordpress": "docker run --rm --name=wordpress --link=mysql -d -v $(echo $PWD)/wordpress:/var/www/html -p 80:80 ghifari160/wordpress",
    "dev:start": "npm run dev:mysql && npm run dev:phpmyadmin && npm run dev:wordpress",

    "dev:mysql_stop": "docker stop mysql",
    "dev:phpmyadmin_stop": "docker stop phpmyadmin",
    "dev:wordpress_stop": "docker stop wordpress",
    "dev:stop": "npm run dev:phpmyadmin_stop && npm run dev:wordpress_stop && npm run dev:mysql_stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ghifari160/g16WPIDML.git"
  },
  "keywords": [
    "idml",
    "wordpress",
    "post",
    "indesign"
  ],
  "author": "GHIFARI160",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ghifari160/g16WPIDML/issues"
  },
  "homepage": "https://github.com/Ghifari160/g16WPIDML#readme"
}
